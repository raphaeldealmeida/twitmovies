<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Hashtag</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%=h movie.title %></td>
    <td><%=h movie.hashtag %></td>
    <td><%= link_to 'Show', [:admin, movie] %></td>
    <td><%= link_to 'Edit', edit_admin_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', [:admin, movie], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New movie', new_admin_movie_path %>